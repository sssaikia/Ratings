<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:paddingBottom="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="#e0e0e0"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:tint="@color/colorAccent"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_meter_imageview"
        android:src="@drawable/ic_fiber_new_black_24dp"/>
    <LinearLayout
        android:layout_margin="2dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/movie_meter_title"
                android:text="Title"
                android:layout_margin="@dimen/text_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSearchResultTitle" />
<RelativeLayout
    android:padding="5dp"
    android:layout_width="50dp"
    android:backgroundTint="#FFD700"
    android:background="@drawable/ic_grade_black_24dp"
    android:layout_height="50dp">
    <TextView
        android:gravity="center"
        android:text="CR"
        android:textStyle="bold"
        android:textColor="#311b92"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/movie_meter_rating"/>
</RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:padding="3dp"
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:tint="#d81b60"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_black_24dp"/>
            <TextView
                android:text="year"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_meter_year"/>
            <LinearLayout
                android:gravity="end|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:backgroundTint="#d81b60"
                    android:layout_marginRight="10dp"
                    android:id="@+id/item_trailer"
                    android:text=""
                    android:background="@drawable/ic_ondemand_video_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <Button
                    android:backgroundTint="#d81b60"
                    android:background="@drawable/ic_info_outline_black_24dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/item_details"
                    android:text=""
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>